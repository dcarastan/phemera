xml.rss(version: '2.0') {
  xml.channel {
    xml.title       Settings['title']
    xml.link        Settings['url']
    xml.description Settings['description']

    posts.each do |time, body|
      xml.item {
        xml.description { xml.cdata markdown(body) }
        xml.pubDate Time.at(time.to_i).strftime("%a, %d %b %Y %H:%M:%S %z")
      }
    end
  }
}
